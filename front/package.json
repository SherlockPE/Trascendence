{
	"name": "frontend-modular",
	"version": "1.0.0",
	"description": "Aplicaci√≥n frontend modular con TypeScript, HTML, CSS, Tailwind y Fastify",
	"main": "server.js",
	"type": "module",
	"scripts": {
		"build:css": "tailwindcss -i ./src/styles/main.css -o ./public/css/tailwind.css",
		"build:ts": "tsc && node scripts/copy-dist.js",
		"build": "npm run build:css && npm run build:ts",
		"dev:css": "tailwindcss -i ./src/styles/main.css -o ./public/css/tailwind.css --watch",
		"dev:ts": "tsc --watch",
		"dev:server": "nodemon server.js",
		"dev": "concurrently \"npm run dev:css\" \"npm run dev:ts\" \"npm run dev:server\"",
		"start": "node server.js"
	},
	"dependencies": {
		"@fastify/static": "^8.1.1",
		"dotenv": "^16.5.0",
		"fastify": "^5.3.2"
	},
	"devDependencies": {
		"autoprefixer": "^10.4.14",
		"concurrently": "^8.0.1",
		"nodemon": "^3.1.10",
		"postcss": "^8.4.23",
		"tailwindcss": "^3.3.2",
		"ts-loader": "^9.4.2",
		"tsc-alias": "^1.8.15",
		"typescript": "^5.0.4"
	}
}
